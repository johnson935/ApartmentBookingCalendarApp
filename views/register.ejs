<%- include("partials/header") %>
<div class="container">

    <div class="container">
        <div class="text-center">
            <h3>Register</h1>
        
            <form action="/register" method="POST">
                <input style="margin-bottom: 1em;" class="col-offset-3 col-sm-6" type="text" name="username" placeholder="Username" required></input>
                
                <input style="margin-bottom: 1em;" class="col-offset-3 col-sm-6" type="password" name="password" placeholder="Password" required></input>
                <button  class="col-offset-3 col-sm-6 btn btn-primary">Submit</button>
            </form>
            <% if(message !== null) {%>
                <h3><%= message %></h3>
                <% } %>
        </div>
    </div>
    </div>
